<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/bottom_sheet_dialog_background"
              android:orientation="vertical"
              app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <LinearLayout
        android:id="@+id/hide_outdated_themes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:drawableStart="@drawable/bottom_sheet_dialog_hide"
            android:drawableTint="@color/main_screen_card_theme_title"
            android:drawablePadding="16dp"
            android:text="@string/bottom_sheet_dialog_hide_outdated_themes"
            android:textColor="?android:attr/textColorPrimary"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/show_outdated_themes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:drawableStart="@drawable/bottom_sheet_dialog_show"
            android:drawableTint="@color/main_screen_card_theme_title"
            android:drawablePadding="16dp"
            android:text="@string/bottom_sheet_dialog_show_outdated_themes"
            android:textColor="?android:attr/textColorPrimary"/>
    </LinearLayout>
</LinearLayout>
