<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/theme_card"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:foreground="?android:selectableItemBackground"
    card_view:cardBackgroundColor="@color/main_screen_card_background"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="1dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/trouble_ques"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="14dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="7dp"
            android:textColor="@color/main_screen_card_theme_title"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <View
            android:id="@+id/divider"
            android:layout_width="wrap_content"
            android:layout_height="1px"
            android:layout_below="@+id/trouble_ques"
            android:layout_marginEnd="14dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="4dp"
            android:background="@color/troubleshooting_card_line_color"/>

        <TextView
            android:id="@+id/trouble_ans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider"
            android:layout_gravity="center"
            android:layout_marginBottom="7dp"
            android:layout_marginEnd="14dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/main_screen_card_theme_title"
            android:textSize="12sp"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>